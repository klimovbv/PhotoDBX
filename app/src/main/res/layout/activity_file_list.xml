<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_list_color"
    android:id="@+id/drawer_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/include_toolbar"
            android:id="@+id/include_toolbar"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_file_list_listView"
            android:layout_below="@id/include_toolbar"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa0e10a2"
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/activity_file_list_progressFrame">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateOnly="true"
            android:layout_gravity="center"/>
    </FrameLayout>
    <include layout="@layout/include_main_nav_drawer"/>
    
</android.support.v4.widget.DrawerLayout>
