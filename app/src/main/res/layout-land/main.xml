<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/photo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#176CEC"
                android:text="@string/show_photo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                android:onClick="onClickPhotoList"
                android:visibility="invisible"
                />

            <Button
                android:id="@+id/video_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#176CEC"
                android:text="@string/show_video"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                android:onClick="onClickVideoList"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/dropbox_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#176CEC"
                android:text="@string/login_to_dropbox"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                android:onClick="onClickLogin"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#176CEC"
                android:text="@string/upload_photo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                android:onClick="onClickCameraButton"
                android:visibility="invisible"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/upload_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#176CEC"
                android:text="@string/upload_video"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                android:onClick="onClickVideoButton"
                android:visibility="invisible"
                android:layout_margin="10dp"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>